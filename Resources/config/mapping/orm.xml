<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Discutea\UserBundle\Entity\User" repository-class="">

        <field name="username" type="string" length="180" unique="true" />
        <field name="email" type="string" length="180" unique="true" />
        <field name="enabled" type="boolean" />
        <field name="salt" type="string" nullable="true" />
        <field name="password" type="string" />
        <field name="lastLogin" type="datetime" nullable="true" />
        <field name="confirmationToken" type="string" length="180" unique="true" nullable="true" />
        <field name="passwordRequestedAt" type="datetime" nullable="true" />
        <field name="roles" type="json" />

    </mapped-superclass>

</doctrine-mapping>
