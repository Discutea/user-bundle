<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
            <bind key="$discuteaUserConfig">%discutea_user.configuration%</bind>
        </defaults>
        <prototype namespace="Discutea\UserBundle\" resource="../../*" exclude="../../{DependencyInjection,Entity,Resources,DiscuteaUserBundle.php}"/>
        <prototype namespace="Discutea\UserBundle\Controller\" resource="../../Controller">
            <tag name="controller.service_arguments"/>
        </prototype>

        <service id="Discutea\UserBundle\EventListener\PasswordListener">
            <tag name="doctrine.event_listener" event="prePersist" />
            <tag name="doctrine.event_listener" event="preUpdate" />
        </service>
    </services>

</container>
